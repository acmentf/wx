#detail {
  padding: 20rpx;
}
#detail .detail-title {
  text-align: center;
  font-size: 32rpx;
}
#detail .detail-info {
  display: flex;
  font-size: 22rpx;
  padding-bottom: 20rpx;
}
#detail .detail-info .news_source,
#detail .detail-info .news_date {
  display: flex;
  align-items: center;
}
#detail .detail-info .news_date {
  margin-left: 30rpx;
}
#detail .detail-info .news-count {
  flex: 1;
  text-align: right;
}
#detail .detail-info .news-count > view {
  text-align: right;
  display: inline-block;
  padding-left: 20rpx;
}
#detail .news_content .wxParse-p image {
  height: 300rpx;
  padding: 0 20rpx;
}
#detail .news_content .empty {
  text-align: center;
  font-size: 40rpx;
  padding-top: 50rpx;
}
